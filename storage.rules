rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to validate image
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 // 5MB
             && request.resource.contentType.matches('image/.*');
    }
    
    // Helper function to validate PDF
    function isValidPDF() {
      return request.resource.size < 20 * 1024 * 1024 // 20MB
             && request.resource.contentType == 'application/pdf';
    }
    
    // Profile Pictures
    match /profiles/{userId}/{fileName} {
      // Anyone can read/view profile pictures
      allow read: if true;
      
      // Only the owner can upload/update their profile picture
      allow write: if isOwner(userId) && isValidImage();
      
      // Only the owner can delete their profile picture
      allow delete: if isOwner(userId);
    }
    
    // Library PDFs
    match /library/{subject}/{fileName} {
      // Authenticated users can read library files
      allow read: if isAuthenticated();
      
      // Authenticated users can upload PDFs to library
      allow write: if isAuthenticated() && isValidPDF();
      
      // Only admin or uploader can delete (uploader tracking needed in Firestore)
      allow delete: if isAuthenticated();
    }
    
    // Post Images
    match /posts/{userId}/{fileName} {
      // Anyone can view post images
      allow read: if true;
      
      // Only the owner can upload post images
      allow write: if isOwner(userId) && isValidImage();
      
      // Only the owner can delete their post images
      allow delete: if isOwner(userId);
    }
    
    // College Images
    match /colleges/{collegeId}/{fileName} {
      // Anyone can view college images
      allow read: if true;
      
      // Only authenticated users can upload college images
      allow write: if isAuthenticated() && isValidImage();
      
      // Only authenticated users can delete
      allow delete: if isAuthenticated();
    }
    
    // Student Documents (High Security)
    match /documents/{userId}/{documentId}/{fileName} {
      // Only the owner can read their documents
      allow read: if isOwner(userId);
      
      // Only the owner can upload their documents (PDF or images only)
      allow write: if isOwner(userId) && (
        request.resource.contentType.matches('application/pdf') ||
        request.resource.contentType.matches('image/.*')
      ) && request.resource.size < 20 * 1024 * 1024; // 20MB limit
      
      // Only the owner can delete their documents
      allow delete: if isOwner(userId);
    }
    
    // Admin uploads (for future use)
    match /admin/{path=**} {
      // Only admin can access
      allow read, write: if isAuthenticated();
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
